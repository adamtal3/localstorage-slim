{
  "compilerOptions": {
    "noImplicitAny": true,
    "noImplicitThis": true,
    "outDir": "./dist/",
    "module": "es2020",
    "target": "es6",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noFallthroughCasesInSwitch": true,
    "strict": true,
    "declaration": true,
    "sourceMap": true,
    "lib": [
      "es2020",
      "esnext",
      "dom"
    ],
    "types": [
      "node"
    ]
  }
}